{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    // "noUncheckedIndexedAccess": true, // TODO: Enable after fixing all array/object access issues
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    // "exactOptionalPropertyTypes": true, // TODO: Enable after fixing all optional property issues
    "noPropertyAccessFromIndexSignature": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
